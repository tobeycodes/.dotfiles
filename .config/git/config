[branch]
  sort = "-committerdate"

[commit]
  gpgSign = true

[core]
  editor = nvim
  pager = delta

[delta]
  dark = true
  navigate = true
  line-numbers = true
  syntax-theme = tokyonight_night

[diff]
  tool = critique

[difftool "critique"]
  cmd = critique difftool \"$LOCAL\" \"$REMOTE\"

[difftool]
  prompt = false

[fetch]
  prune = true

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictStyle = zdiff3
  tool = nvimdiff

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "nvimdiff"]
  layout = "LOCAL,BASE,REMOTE / MERGED"

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[rerere]
  enabled = true

[tag]
  gpgSign = true

