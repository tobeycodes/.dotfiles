[branch]
  sort = "-committerdate"

[commit]
  gpgSign = true

[core]
  editor = nvim
  pager = delta

[delta]
  dark = true
  navigate = true
  line-numbers = true
  syntax-theme = tokyonight_night
  minus-style                   = syntax "#4a272f"
  minus-non-emph-style          = syntax "#4a272f"
  minus-emph-style              = syntax "#713137"
  minus-empty-line-marker-style = syntax "#4a272f"
  line-numbers-minus-style      = "#914c54"
  plus-style                    = syntax "#243e4a"
  plus-non-emph-style           = syntax "#243e4a"
  plus-emph-style               = syntax "#2c5a66"
  plus-empty-line-marker-style  = syntax "#243e4a"
  line-numbers-plus-style       = "#449dab"
  line-numbers-zero-style       = "#3b4261"

[diff]
  tool = critique

[difftool "critique"]
  cmd = critique difftool \"$LOCAL\" \"$REMOTE\"

[difftool]
  prompt = false

[fetch]
  prune = true

[gpg]
  format = ssh

[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[init]
  defaultBranch = main

[interactive]
  diffFilter = delta --color-only

[merge]
  conflictStyle = zdiff3
  tool = nvimdiff

[mergetool]
  prompt = false
  keepBackup = false

[mergetool "nvimdiff"]
  layout = "LOCAL,BASE,REMOTE / MERGED"

[pull]
  rebase = true

[push]
  autoSetupRemote = true

[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[rerere]
  enabled = true

[tag]
  gpgSign = true

